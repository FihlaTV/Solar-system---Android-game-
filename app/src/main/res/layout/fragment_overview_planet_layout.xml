<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallpaper_more_planet">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="16dp">
           <TextView
               android:padding="@dimen/canle13dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hello fragment "
               android:id="@+id/showAboutOverview"
               android:textColor="@color/colorTrangVery"
               android:textSize="@dimen/kichthuoc18dp"
               android:gravity="left|right"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/showAboutOverview"
               android:layout_alignParentRight="true"
               android:text="Theo Wikipedia"
               android:textColor="@color/colorTrang"
               android:textSize="@dimen/kichthuoc20dp"
               android:layout_marginRight="@dimen/canle15dp"
               android:layout_marginBottom="@dimen/canle15dp"/>
       </RelativeLayout>
   </ScrollView>

    <ImageButton
        android:layout_width="@dimen/ChieuRongImageButtonZoom"
        android:layout_height="@dimen/ChieuCaoImageButtonZoom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/canle20dp"
        android:layout_marginRight="@dimen/canle20dp"
        android:src="@mipmap/zoom_in_icon_2"
        android:scaleType="center"
        android:background="@drawable/custom_background_button_max_min_text"
        android:id="@+id/btnTangKichThuocTongQuan"
        />

    <ImageButton
        android:layout_width="@dimen/ChieuRongImageButtonZoom"
        android:layout_height="@dimen/ChieuCaoImageButtonZoom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/canle20dp"
        android:layout_marginRight="80dp"
        android:src="@mipmap/zoom_out_icon"
        android:background="@drawable/custom_background_button_max_min_text"
        android:scaleType="centerInside"
        android:id="@+id/btnGiamKichThuocTongQuan"
        />

</RelativeLayout>